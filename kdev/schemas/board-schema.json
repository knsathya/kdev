{
    "$schema": "http://json-schema.org/draft-06/schema",
    "description": "kdev schema",
    "type": "object",
    "properties": {
        "required": [
            "recipe-name",
            "kernel-params",
            "rootfs-params"
        ],
        "recipe-name": {
            "type": "string",
            "description": "Name of the recipe"
        },
        "kernel-params": {
            "type": "object",
            "description": "kernel build params",
            "required": [
                "arch-name"
            ],
            "properties": {
                "enable-build": {
                    "type": "boolean",
                    "default": true
                },
                "arch-name": {
                    "description": "ARCH name used for compilation",
                    "enum": [
                        "x86_64",
                        "i386",
                        "arm64"
                    ]
                },
                "use-initramfs": {
                    "type": "boolean",
                    "default": true
                },
                "config-file": {
                    "type": "string",
                    "description": "Kernel config file",
                    "default": "kernel.config"
                },
                "compiler-options": {
                    "description": "Compiler Options",
                    "type": "object",
                    "properties": {
                        "CC": {
                            "type": "string",
                            "default": ""
                        },
                        "cflags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": []
                        }
                    },
                    "default": {
                        "CC": "",
                        "cflags": []
                    }
                },
                "gen-image": {
                    "description": "Generate image",
                    "type": "boolean",
                    "default": false
                },
                "image-name": {
                    "type": "string",
                    "description": "Kernel image name",
                    "default": "kernel.img"
                }
            }
        },
        "rootfs-params": {
            "$ref": "#/definitions/ rootfs-params"
        },
        "initramfs-params": {
            "$ref": "#/definitions/ rootfs-params"
        },
        "bootimg-params": {
            "type": "object",
            "description": "bootimg params",
            "properties": {
                "enable-build": {
                    "type": "boolean",
                    "default": false
                },
                "gen-image": {
                    "description": "Generate image",
                    "type": "boolean",
                    "default": false
                },
                "image-name": {
                    "type": "string",
                    "description": "Boot image name",
                    "default": "kernel.img"
                },
                "base": {
                    "type": "string",
                    "default": "0x10000000"
                },
                "kernel-offset": {
                    "type": "string",
                    "default": "0x00008000"
                },
                "ramdisk-offset": {
                    "type": "string",
                    "default": "0x01000000"
                },
                "second-offset": {
                    "type": "string",
                    "default": ""
                },
                "os-version": {
                    "type": "string",
                    "default": "v1.0"
                },
                "os-patch-level": {
                    "type": "integer",
                    "default": 1
                },
                "tags-offset": {
                    "type": "integer",
                    "default": 0
                },
                "pagesize": {
                    "type": "integer",
                    "default": 4096
                },
                "use-id": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "definitions": {
            "rootfs-params": {
                "type": "object",
                "required": [
                    "name"
                ],
                "name": {
                    "type": "string",
                    "description": "Name of the rootfs",
                    "enum": [
                        "busybox",
                        "minrootfs"
                    ],
                    "default": "busybox"
                },
                "enable-build": {
                    "type": "boolean",
                    "description": "Build rootfs image.",
                    "default": true
                },
                "custom-update": {
                    "type": "boolean",
                    "description": "Update rootfs dir.",
                    "default": true
                },
                "custom-update-dir": {
                    "type": "string",
                    "description": "Update rootfs dir name.",
                    "default": "updates/busybox"
                },
                "hostname": {
                    "type": "string",
                    "description": "Hostname",
                    "default": "busybox"
                },
                "config-file": {
                    "type": "string",
                    "description": "Rootfs config file",
                    "default": ""
                },
                "diffconfig-file": {
                    "type": "string",
                    "description": "Rootfs diff config file",
                    "default": ""
                },
                "source-branch": {
                    "description": "git remote name",
                    "type": "string",
                    "default": "master"
                },
                "source-url": {
                    "description": "git remote link of your repository",
                    "type": "string",
                    "pattern": "((git|ssh|http(s)?)|(git@[\\w\\.]+))(:(//)?)([\\w\\.@\\:\\-~]+)(/)?",
                    "default": "git://git.busybox.net/busybox"
                },
                "arch-name": {
                    "description": "ARCH name used for compilation",
                    "enum": [
                        "x86_64",
                        "i386",
                        "arm64"
                    ]
                },
                "compiler-option": {
                    "description": "Compiler Options",
                    "type": "object",
                    "properties": {
                        "CC": {
                            "type": "string",
                            "default": ""
                        },
                        "cflags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": []
                        }
                    },
                    "default": {
                        "CC": "",
                        "cflags": []
                    }
                },
                "adb-gadget": {
                    "description": "ADB gadget",
                    "type": "object",
                    "properties": {
                        "enable": {
                            "type": "boolean",
                            "default": false
                        },
                        "manufacturer": {
                            "type": "string",
                            "default": "Intel"
                        },
                        "product": {
                            "type": "string",
                            "default": "KDEV"
                        },
                        "vendorid": {
                            "type": "string",
                            "default": "0x8087"
                        },
                        "productid": {
                            "type": "string",
                            "default": "0x0a5f"
                        }
                    }
                },
                "zero-gadget": {
                    "type": "boolean",
                    "default": false
                },
                "gen-image": {
                    "description": "Generate image",
                    "type": "boolean",
                    "default": false
                },
                "image-type": {
                    "description": "Rootfs image type",
                    "enum": [
                        "ext2",
                        "ext3",
                        "ext4",
                        "cpio"
                    ],
                    "default": "ext2"
                },
                "image-name": {
                    "type": "string",
                    "description": "Image name",
                    "default": "rootfs.img.ext2"
                }
            }
        }
    }
}
